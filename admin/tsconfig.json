{
  "compilerOptions": {
    "target": "esnext",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./build",
    "baseUrl": "./",
    "paths": {
      "@/*": ["@/*"],
      "@docs/*": ["docs/*"],
      "@utils/*": ["utils/*"],
      "@controllers/*": ["controllers/*"],
      "@routers/*": ["routers/*"],
      "@middlewares/*": ["middlewares/*"],
      "@models/*": ["models/*"],
      "@config/*": ["config/*"],
      "@services/*": ["services/*"],
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false 
  },
  "include": ["/**/*"]
}


